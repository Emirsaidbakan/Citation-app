<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- BACKGROUND DESIGN -->
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#0b1e38" height="512.0" layoutX="0.0" layoutY="0.0" stroke="#032748" strokeType="INSIDE" width="700.0" />
        
        <Rectangle arcHeight="5.0" arcWidth="5.0" height="370.0" layoutX="30.0" layoutY="100.0" stroke="#0b1e38" strokeType="INSIDE" width="640.0">
            <fill>
                <RadialGradient centerX="1.0" centerY="1.0" cycleMethod="REPEAT" focusAngle="-153.74" focusDistance="-1.0" radius="0.56422">
                    <stops>
                        <Stop>
                            <color>
                                <Color red="0.043" green="0.117" blue="0.219" />
                            </color>
                        </Stop>
                        <Stop offset="1.0">
                            <color>
                                <Color red="0.525" green="0.737" blue="0.937" />
                            </color>
                        </Stop>
                    </stops>
                </RadialGradient>
            </fill>
        </Rectangle>

        <Text fill="WHITE" layoutX="40.0" layoutY="50.0" text="Movie Source">
            <font>
                <Font name="Times New Roman Bold" size="35.0" />
            </font>
        </Text>

        <!-- MOVIE SOURCE FIELDS -->
        <Label layoutX="50.0" layoutY="120.0" style="-fx-font-size: 18px; -fx-font-family: 'Times New Roman';" text="Title:" textFill="WHITE" />
        <TextField fx:id="titleField" layoutX="100.0" layoutY="117.0" prefWidth="400.0" />
        
        <Label layoutX="50.0" layoutY="160.0" style="-fx-font-size: 18px; -fx-font-family: 'Times New Roman';" text="Year Released:" textFill="WHITE" />
        <TextField fx:id="yearField" layoutX="170.0" layoutY="157.0" prefWidth="100.0" />

        <Label layoutX="50.0" layoutY="200.0" style="-fx-font-size: 18px; -fx-font-family: 'Times New Roman';" text="Director:" textFill="WHITE" />
        <TextField fx:id="directorField" layoutX="130.0" layoutY="197.0" prefWidth="400.0" />
        
        <Label layoutX="50.0" layoutY="240.0" style="-fx-font-size: 18px; -fx-font-family: 'Times New Roman';" text="Production Company:" textFill="WHITE" />
        <TextField fx:id="productionCompanyField" layoutX="220.0" layoutY="237.0" prefWidth="350.0" />

        <!-- BUTTONS -->
        <Button fx:id="submitButton" layoutX="395.0" layoutY="420.0" prefWidth="120.0" style="-fx-font-size: 18px; -fx-font-family: 'Times New Roman';" text="Submit" />
        <Button fx:id="backButton" layoutX="530.0" layoutY="420.0" prefWidth="120.0" style="-fx-font-size: 18px; -fx-font-family: 'Times New Roman';" text="Back" />
    </children>
</AnchorPane>
